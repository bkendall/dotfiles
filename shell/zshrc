ZSH=$HOME/.oh-my-zsh
ZSH_THEME="bryankendall"

DISABLE_UPDATE_PROMPT=true
MYVIMRC=$HOME/dotfiles.git/vim/vimrc

export HOMEBREW_GITHUB_API_TOKEN=21addb35423b1ddbc1f5f649dc54d886eb63aca8

if [ -e '/usr/local/bin/virtualenvwrapper.sh' ]
then
  export WORKON_HOME=$HOME/.virtualenvs
  source /usr/local/bin/virtualenvwrapper.sh
fi

if [ -e '/usr/local/go' ]
then
  export PATH=$PATH:/usr/local/go/bin
fi

if [ -d "$HOME/.ssh/config.d" ]; then
  rm -f $HOME/.ssh/config
  cat $HOME/.ssh/config.d/*.config >> $HOME/.ssh/config
fi

export DOCKER_HOST=tcp://192.168.59.103:2376
export DOCKER_CERT_PATH=/Users/bkendall/.boot2docker/certs/boot2docker-vm
export DOCKER_TLS_VERIFY=1

plugins=(git brew docker npm redis-cli)

export EDITOR='vim'

source $ZSH/oh-my-zsh.sh
