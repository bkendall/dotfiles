syntax enable
let g:solarized_termcolors=256
set t_Co=256
colorscheme solarized
set background=dark

filetype on

set nocompatible
set number

" tabs stuff
set tabstop=2
set shiftwidth=2
set softtabstop=2
set expandtab

" make things better
set encoding=utf-8
set scrolloff=3
set autoindent
set showmode
set showcmd
set hidden
set visualbell
set ttyfast
set ruler
set backspace=indent,eol,start
set undofile
set undodir=~/.vim/undodir

" searching/moving
set ignorecase
set smartcase
set gdefault
set incsearch
set showmatch
set hlsearch

" long lines
set wrap
set textwidth=79
set formatoptions=qrn1
set colorcolumn=80
